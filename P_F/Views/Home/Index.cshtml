<!-- Modal de Búsqueda Rápida de Cliente -->
<div class="modal fade" id="buscarClienteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-search me-2"></i>Buscar Cliente
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="buscarInput" class="form-label">Nombre, Documento o Teléfono:</label>
                    <input type="text" class="form-control" id="buscarInput" placeholder="Ingrese el término de búsqueda...">
                </div>
                <div id="resultadosBusqueda">
                    <!-- Los resultados se mostrarán aquí -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Búsqueda rápida de clientes
        $('#buscarInput').on('keyup', function() {
            var termino = $(this).val();
            if (termino.length >= 2) {
                $.get('@Url.Action("BuscarCliente", "Home")', { termino: termino }, function(data) {
                    var html = '';
                    if (data.length > 0) {
                        html += '<div class="list-group">';
                        $.each(data, function(index, cliente) {
                            html += '<a href="@Url.Action("Details", "Clientes")/' + cliente.id + '" class="list-group-item list-group-item-action">';
                            html += '<h6 class="mb-1">' + cliente.nombre + '</h6>';
                            html += '<small>Doc: ' + cliente.documento + ' | Tel: ' + cliente.telefono + '</small>';
                            html += '</a>';
                        });
                        html += '</div>';
                    } else {
                        html = '<p class="text-muted">No se encontraron clientes.</p>';
                    }
                    $('#resultadosBusqueda').html(html);
                });
            } else {
                $('#resultadosBusqueda').html('');
            }
        });

        // Auto-refresh de datos cada 5 minutos
        setInterval(function() {
            location.reload();
        }, 300000);
    </script>
}

