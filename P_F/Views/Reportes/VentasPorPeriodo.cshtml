@{
    ViewData["Title"] = "Ventas por Período";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-chart-line me-2"></i>Reporte de Ventas por Período
    </h1>
    <a href="@Url.Action("Index", "Reportes")" class="btn btn-secondary btn-sm">
        <i class="fas fa-arrow-left me-1"></i>Volver a Reportes
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-filter me-1"></i>Seleccionar Período
        </h6>
    </div>
    <div class="card-body">
        <form method="post" action="@Url.Action("VentasPorPeriodo", "Reportes")">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="fechaInicio">Fecha Inicio</label>
                        <input type="date" class="form-control" id="fechaInicio" name="fechaInicio" 
                               value="@DateTime.Now.AddDays(-30).ToString("yyyy-MM-dd")" required>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="fechaFin">Fecha Fin</label>
                        <input type="date" class="form-control" id="fechaFin" name="fechaFin" 
                               value="@DateTime.Now.ToString("yyyy-MM-dd")" required>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>&nbsp;</label>
                        <div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search me-1"></i>Generar Reporte
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Botones de acceso rápido -->
<div class="row">
    <div class="col-lg-4 mb-3">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <h6 class="font-weight-bold text-primary">Ventas del Mes Actual</h6>
                <p class="text-muted small mb-2">Ver las ventas desde el 1° del mes hasta hoy</p>
                <button class="btn btn-primary btn-sm" onclick="reporteMesActual()">
                    <i class="fas fa-calendar-alt me-1"></i>Consultar
                </button>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4 mb-3">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <h6 class="font-weight-bold text-success">Últimos 7 Días</h6>
                <p class="text-muted small mb-2">Ventas de la última semana</p>
                <button class="btn btn-success btn-sm" onclick="reporteUltimaSemana()">
                    <i class="fas fa-calendar-week me-1"></i>Consultar
                </button>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4 mb-3">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <h6 class="font-weight-bold text-info">Año Actual</h6>
                <p class="text-muted small mb-2">Todas las ventas del año @DateTime.Now.Year</p>
                <button class="btn btn-info btn-sm" onclick="reporteAnual()">
                    <i class="fas fa-calendar me-1"></i>Consultar
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function reporteMesActual() {
            const ahora = new Date();
            const primerDia = new Date(ahora.getFullYear(), ahora.getMonth(), 1);
            
            document.getElementById('fechaInicio').value = primerDia.toISOString().split('T')[0];
            document.getElementById('fechaFin').value = ahora.toISOString().split('T')[0];
        }

        function reporteUltimaSemana() {
            const ahora = new Date();
            const hace7Dias = new Date();
            hace7Dias.setDate(ahora.getDate() - 7);
            
            document.getElementById('fechaInicio').value = hace7Dias.toISOString().split('T')[0];
            document.getElementById('fechaFin').value = ahora.toISOString().split('T')[0];
        }

        function reporteAnual() {
            const ahora = new Date();
            const primerDiaAno = new Date(ahora.getFullYear(), 0, 1);
            
            document.getElementById('fechaInicio').value = primerDiaAno.toISOString().split('T')[0];
            document.getElementById('fechaFin').value = ahora.toISOString().split('T')[0];
        }
    </script>
}